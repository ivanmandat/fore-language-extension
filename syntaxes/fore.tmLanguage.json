{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "FORe",
	"scopeName": "source.fore",
	"patterns": [
		{
			"include": "#doc"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"doc": {
			"patterns": [
				{
					"name": "comment.block.documentation.fore",
					"match": "^[ \\t]*///.*$"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.fore",
					"match": "//.*$"
				},
				{
					"name": "comment.block.braces.fore",
					"begin": "\\{",
					"end": "\\}",
					"patterns": [
						{
							"include": "#comments"
						}
					]
				},
				{
					"name": "comment.block.cstyle.fore",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.fore",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.fore",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.fore",
					"match": "\\b\\d+(?:\\.\\d+)?\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.fore",
					"match": "(?i:\\b(If|Then|Elseif|Else\\s+If|Else|End\\s+If|For|Each|To|Step|End\\s+For|While|Do|End\\s+While|Select|Case|Try|Except|Finally|Return|Exit|Break|Continue)\\b)"
				},
				{
					"name": "storage.type.fore",
					"match": "(?i:\\b(Class|End\\s+Class|Sub|Function|Constructor|Destructor|End\\s+Sub|End\\s+Function|Var|Const|Public|Private|Shared|Begin|End|New|As|Array|Of)\\b)"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.primitive.fore",
					"match": "(?i:\\b(Integer|String|Variant|Boolean|DateTime|TimeSpan|ArrayList|HashTable|TriState)\\b)"
				},
				{
					"name": "constant.language.fore",
					"match": "\\b(True|False|Null)\\b"
				},
				{
					"name": "support.type.interface.fore",
					"match": "\\bI[A-Z][A-Za-z0-9_]*\\b"
				},
				{
					"name": "support.type.class.fore",
					"match": "\\b([A-Z][A-Za-z0-9_]*Class)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.fore",
					"match": ":=|="
				},
				{
					"name": "keyword.operator.arithmetic.fore",
					"match": "\\+|\\-|\\*|\\/|\\%"
				},
				{
					"name": "keyword.operator.comparison.fore",
					"match": "<=|>=|<>|<|>"
				},
				{
					"name": "punctuation.separator.comma.fore",
					"match": ","
				},
				{
					"name": "punctuation.terminator.statement.fore",
					"match": ";"
				},
				{
					"name": "punctuation.section.parens.fore",
					"match": "[\\(\\)]"
				},
				{
					"name": "punctuation.section.brackets.fore",
					"match": "[\\[\\]]"
				},
				{
					"name": "punctuation.section.braces.fore",
					"match": "[\\{\\}]"
				},
				{
					"name": "punctuation.accessor.dot.fore",
					"match": "\\."
				},
				{
					"name": "keyword.operator.ternary.fore",
					"match": "\\?"
				},
				{
					"name": "keyword.operator.colon.fore",
					"match": ":"
				}
			]
		}
	}
}